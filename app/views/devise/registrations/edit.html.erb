<div class="editContainer">

  <h2 class="editText">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="regEditField">
        <%= f.label :email,class:"textLabel" %><br />
        <%= f.email_field :email,class:"editFill", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="regEditField">
        <%= f.label :password,class:"textLabel" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password,class:"editFill", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="regEditField">
        <%= f.label :password_confirmation,class:"textLabel" %><br />
        <%= f.password_field :password_confirmation,class:"editFill", autocomplete: "new-password" %>
      </div>

      <div class="regEditField">
        <%= f.label :current_password,class:"textLabel" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password,class:"editFill", autocomplete: "current-password" %>
      </div>

      <div class="regEditActions">
        <%= f.submit "Update",class:"updateButton" %>
      </div>
    <% end %>
    <h3 class="cancel">Cancel my account</h3>

    <p class="unhappy">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),class:"cancelButton", data: { confirm: "Are you sure?" }, method: :delete %></p>

  <div class="editLinks">
    <%= link_to "Back", :back %>
  </div>

</div>